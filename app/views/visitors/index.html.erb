                <%= link_to "Saturday",  saturday_menus_path,  class: "list-group-item" %>
            </div>
        </div>
   <% end %>
        <div class="col-md-9">
            <div class="thumbnail">
                <%= image_tag Dir.new(Rails.root.to_s + "/app/assets/images").to_a.select{|f| f.downcase.match(/\.jpg|\.jpeg|\.png/) }.sample %>
