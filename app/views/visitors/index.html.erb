<!-- Page Content -->
<div class="container">
    <div class="row">
    <% if user_signed_in? %>
        <div class="col-md-3">
            <p class="lead">Weekdays menu</p>
            <div class="list-group">
                <%= link_to "Sunday",    sunday_menus_path,    class: "list-group-item" %>
                <%= link_to "Monday",    monday_menus_path,    class: "list-group-item" %>
                <%= link_to "Tuesday",   tuesday_menus_path,   class: "list-group-item" %>
                <%= link_to "Wednesday", wednesday_menus_path, class: "list-group-item" %>
